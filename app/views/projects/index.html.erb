<% provide(:title, 'Proyectos') %>
<div class="masonry-item col-md-12">
  <!-- #Todo ==================== -->
  <div class="bd bgc-white">
    <div class="layers">
      <div class="bgc-blue-grey-600 c-white d-inline layer w-100 p-15">
        <h5 class="float-left">Proyectos</h5>
        <%= link_to '<button type="button" class="btn btn-outline-light float-right btn-sm mR-5"
                      id="new-project-button"">
                      <i class="ti-plus"></i>
                      Registrar proyecto
                    </button>'.html_safe,
                    new_project_path
        %>
      </div>
      <div class="layer w-100 p-20 text-center">
        <% if @projects.count > 0 %>
          <% @projects.in_groups_of(3) do |project1, project2, project3|%>
            <div class="row" id="projects-datatable" >
              <div class="card project-card">
                <img class="card-img-top" src="logo2.png" alt="Card image cap">
                <div class="card-body">
                  <h5 class="card-title"><%= project1.name %></h5>
                  <h6 class="card-subtitle mb-2 text-muted"><%= project1.code %></h6>
                  <p class="card-text">Inicio del proyecto: <%= project1.start_date %></p>
                  <p class="card-text">Estatus:
                    <% if project1.status %>
                      Activo
                    <% else %>
                      Completado
                    <% end %>
                  </p>
                  <p class="card-text">
                    <div class="progress">
                      <div class="progress-bar" role="progressbar" style="width: <%= Random.rand(100)%>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= Random.rand(100)%>%</div>
                    </div>
                  </p>
                  <%= link_to raw('<button type="button" class="btn btn-outline-primary btn-circle">
                        <i class="ti-eye icon-white" aria-hidden="true"></i>
                        </button>').html_safe, {action: :show, :id => project1.id } %>
                  <button type="button" class="btn btn-outline-danger btn-circle delete-project"
                     data-project-id="<%= project1.id %>">
                     <i class="ti-trash" aria-hidden="true"></i>
                  </button>
                </div>
              </div>
              <% if project2 %>
                <div class="card project-card">
                  <img class="card-img-top" src="logo2.png" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title"><%= project2.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= project2.code %></h6>
                    <p class="card-text">Inicio del proyecto: <%= project2.start_date %></p>
                    <p class="card-text">Estatus:
                      <% if project2.status %>
                        Activo
                      <% else %>
                        Completado
                      <% end %>
                    </p>
                    <p class="card-text">
                      <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: <%= Random.rand(100)%>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= Random.rand(100)%>%</div>
                      </div>
                    </p>
                    <%= link_to raw('<button type="button" class="btn btn-outline-primary btn-circle">
                          <i class="ti-eye icon-white" aria-hidden="true"></i>
                          </button>').html_safe, {action: :show, :id => project2.id } %>
                    <button type="button" class="btn btn-outline-danger btn-circle delete-project"
                       data-project-id="<%= project2.id %>">
                       <i class="ti-trash" aria-hidden="true"></i>
                    </button>
                  </div>
                </div>
              <% end %>
              <% if project3 %>
                <div class="card project-card">
                  <img class="card-img-top" src="logo2.png" alt="Card image cap">
                  <div class="card-body">
                    <h5 class="card-title"><%= project3.name %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= project3.code %></h6>
                    <p class="card-text">Inicio del proyecto: <%= project3.start_date %></p>
                    <p class="card-text">Estatus:
                      <% if project3.status %>
                        Activo
                      <% else %>
                        Completado
                      <% end %>
                    </p>
                    <p class="card-text">
                      <div class="progress">
                        <div class="progress-bar" role="progressbar" style="width: <%= Random.rand(100)%>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= Random.rand(100)%>%</div>
                      </div>
                    </p>
                    <%= link_to raw('<button type="button" class="btn btn-outline-primary btn-circle">
                          <i class="ti-eye icon-white" aria-hidden="true"></i>
                          </button>').html_safe, {action: :show, :id => project3.id } %>
                    <button type="button" class="btn btn-outline-danger btn-circle delete-project"
                       data-project-id="<%= project3.id %>">
                       <i class="ti-trash" aria-hidden="true"></i>
                    </button>
                  </div>
                </div>
              <% end %>
            </div>
            <br/>
          <% end %>
        <% else %>
            <h3>No hay registro proyectos</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>
