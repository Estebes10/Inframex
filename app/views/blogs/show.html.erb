<% provide(:title, 'Bitácora') %>
<div class="masonry-item col-md-5">
  <!-- #Todo ==================== -->
  <div class="bd bgc-white">
    <div class="layers">
      <div class="bgc-blue-grey-600 c-white d-inline layer w-100 p-15">
        <%= link_to '<button type="button" class="btn btn-outline-light btn-circle float-left">
                      <i class="ti-arrow-left"></i>
                    </button>'.html_safe,
                    project_path(id: @project)
        %>
        <h5 class="float-left pL-15">Bitácora - <%= @blog.name + " - " + @blog.date.strftime("%d/%m/%Y") %></h5>
        <%= link_to '<button type="button" class="btn btn-outline-light float-right btn-sm mR-5"
                      id="new-blog-button2">
                      <i class="ti-pencil"></i>
                    </button>'.html_safe,
                    edit_project_blog_path(project_id: @project, id: @blog)
        %>
        <button type="button" class="btn btn-outline-light float-right delete-blog btn-sm mR-5"
                data-blog-id="<%= @blog.id %>">
          <i class="ti-trash" aria-hidden="true"></i>
        </button>

      </div>
      <div class="layer w-100 p-20 text-center">
        <%= render "form" %>
      </div>
    </div>
  </div>
</div>

<div class="col-md-7">
  <div class="row gap-20">

    <div class="masonry-item col-md-12">
      <div class="bd bgc-white">
        <div class="layers">
          <%= render "jobs/index"%>
        </div>
      </div>
    </div>

    <div class="masonry-item col-md-12">
      <div class="bd bgc-white">
        <div class="layers">
          <div class="bgc-blue-grey-600 c-white d-inline layer w-100 p-15">
            <h5 class="float-left">Archivos</h5>
            <button type="button" class="btn btn-outline-light float-right btn-sm mR-5"
                    id="new-job-button">
              <i class="ti-plus"></i>
              Agregar archivo
            </button>
          </div>
          <div class="layer w-100 p-20">
            <div class="row">
              <div class="col-md-10">
                <p class="lead">Actualmente no hay registros de archivos en esta bitácora</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
