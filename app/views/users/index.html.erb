<% provide(:title, 'Usuarios') %>
<div class="masonry-item col-md-6">
  <!-- #Todo ==================== -->
  <div class="bd bgc-white">
    <div class="layers">
      <div class="bgc-secondary c-white layer w-100 p-15">
        <h5 class="pull-right">Usuarios
          <button type="button" class="btn btn-outline-light float-right btn-sm" id="modal-trigger"
                  data-toggle="modal" data-target="#">
            <i class="ti-user"></i>
            Roles
          </button>
          <a id="modal-trigger"
            href="<%= new_user_path %>" data-remote="true"
            data-toggle="modal" data-target="#user-modal">
            <button type="button" class="btn btn-outline-light float-right btn-sm mR-5">
              <i class="ti-plus"></i>
              Registrar Usuario
            </button>
          </a>
        </h5>
      </div>
      <div class="layer w-100 p-20 text-center">
        <div class="form-group row">
          <label class="col-sm-4" for="sel1">Selecciona Rol:</label>
          <div class="col-sm-4">
            <select class="form-control" id="sel1">
              <option>Administrador</option>
              <option>Supervisor</option>
              <option>Cliente</option>
            </select>
            <br>
          </div>
          <div class="col-sm-4">
            <button type="button" class="btn btn-outline-primary">
              Consultar
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="user-modal" role="dialog" aria-labelledby="user-label" aria-hidden="true">
</div>